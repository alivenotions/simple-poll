{
  "name": "@alivenotions/simple-poll",
  "version": "0.0.0-development",
  "description": "Enable polling with configurable delay and implicit backpressure",
  "main": "dist/poll.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:*",
    "build:main": "babel src --out-dir dist --ignore src/*.test.js",
    "build:umd": "webpack --output-filename poll.umd.js -d",
    "build:umd.min": "webpack --output-filename poll.umd.min.js -p",
    "commit": "git cz",
    "test": "mocha src/*.test.js --require @babel/register",
    "test:watch": "npm t -- -w",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "coverage": "nyc npm test",
    "coverage:report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alivenotions/simple-poll.git"
  },
  "author": "Bhavdeep Dhanjal <dhanjalbhavdeep@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alivenotions/simple-poll/issues"
  },
  "keywords": [
    "polling",
    "pull",
    "delay"
  ],
  "files": [
    "dist",
    "README.md",
    "example"
  ],
  "homepage": "https://github.com/alivenotions/simple-poll#readme",
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/plugin-proposal-async-generator-functions": "7.1.0",
    "@babel/preset-env": "7.1.5",
    "@babel/register": "7.0.0",
    "babel-loader": "8.0.4",
    "chai": "4.2.0",
    "commitizen": "3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "5.2.0",
    "node-fetch": "2.2.0",
    "npm-run-all": "4.1.3",
    "nyc": "13.1.0",
    "rimraf": "2.6.2",
    "semantic-release": "^15.11.0",
    "sinon": "7.1.1",
    "travis-deploy-once": "^5.0.9",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "7.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": "> 0.25%, not dead"
}
